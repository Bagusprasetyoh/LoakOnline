<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LemonChiffon"
    android:orientation="vertical"
    tools:context="com.example.huthut.loakonline.Pengepul.HomePengepulActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ListView
                android:id="@+id/listTransaksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </HorizontalScrollView>


    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/listDetailTransaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="60dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom">

            <Button
                android:id="@+id/terima"
                android:background="@color/LimeGreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ya, Saya Beli"
                android:textColor="@color/White"/>

            <Button
                android:id="@+id/tolak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tolak"
                android:textColor="@color/White"/>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
